<!doctype html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="/css/login.css">
        <link rel="stylesheet" href="/css/bootstrap-material-design.min.css">
        <link rel="stylesheet" href="/css/material-icons.min.css">
        <title>Chat || Login</title>
    </head>
    <body>
        <div class="container">
            <h1 class="header">Login</h1>
            <form action="/u/login" method="post" class="form">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                <div class="form-group actions">
                    <button type="submit" class="btn btn-raised btn-info loginBTN">Login</button>
                    <p class="account">No account? <a href="/u/register">Register here!</a></p>
                </div>
            </form>
        </div>
    </body>
</html>
